.goodslist {
  display: flex;
  width: 100%;
  justify-content: space-around;
  flex-wrap: wrap;
  flex-direction: row;
}
.goodslist .goods {
  display: grid;
  align-items: center;
  justify-items: center;
  width: 48%;
  height: 472rpx;
  background-color: #ffffff;
  border-radius: 3%;
  margin-bottom: 10rpx;
  transition: all 0.3s;
}
.goodslist .goods .img {
  width: 90%;
  margin: auto;
  text-align: center;
}
.goodslist .goods .img image {
  width: 93% !important;
  height: 151px;
  border-radius: 5%;
  box-shadow: 0px 3px 3px 1px #aaa;
}
.goodslist .goods span {
  width: 95%;
  height: auto;
  font-weight: 550;
  font-size: 26rpx;
  /* 字体间距 */
  letter-spacing: 1rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goodslist .goods .center {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  text-align: left;
}
.goodslist .goods .center span {
  margin-bottom: 10rpx;
}
.goodslist .goods .price {
  font-size: 28rpx;
  color: #c42e2e;
  font-weight: 550;
}
